<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages">

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="85dp" />

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:textColor="#faf8f8"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/signup_username"
        android:hint="Username"
        android:textAlignment="textStart"
        android:textColor="#0f0e0e"
        android:textColorHint="#676262"
        android:textStyle="italic"
        android:background="@drawable/border_pages"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <EditText
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/signup_email"
        android:hint="Email-Id"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_username"
        app:layout_constraintRight_toRightOf="@+id/signup_username"
        app:layout_constraintLeft_toLeftOf="@+id/signup_username"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="#0f0e0e"
        android:textColorHint="#676262"
        android:background="@drawable/border_pages"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="italic"/>

    <EditText
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password"
        android:hint="Password"
        android:textColor="#0f0e0e"
        android:textColorHint="#676262"
        android:background="@drawable/border_pages"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="@+id/signup_email"
        app:layout_constraintLeft_toLeftOf="@+id/signup_email"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_re_password"
        app:layout_constraintRight_toRightOf="@+id/signup_password"
        app:layout_constraintLeft_toLeftOf="@+id/signup_password"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_password"
        android:hint="Re Type Password"
        android:textColor="#0f0e0e"
        android:textColorHint="#676262"
        android:background="@drawable/border_pages"
        android:textAlignment="textStart"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="italic"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/signup_register"
        android:background="@drawable/border_button"
        android:textAlignment="center"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_re_password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:layout_width="98dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/temp_logo_icon"
        android:id="@+id/imageButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/border_icons"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/settings_icon"
        android:id="@+id/imagesignup_register"
        app:layout_constraintRight_toRightOf="@+id/toolbar2"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        android:background="@drawable/border_icons"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/female_user_icon"
        android:id="@+id/imageButton5"
        app:layout_constraintRight_toLeftOf="@+id/imagesignup_register"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/toolbar2"
        android:background="@drawable/border_icons"/>
</android.support.constraint.ConstraintLayout>