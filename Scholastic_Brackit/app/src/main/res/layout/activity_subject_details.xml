<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages">


    <TextView
        android:text="Name"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:padding="10dp"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:text="Faculty"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="@+id/textView2" />

    <TextView
        android:text="Obtained Grade/Marks"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:padding="10dp"
        android:layout_width="170dp"
        android:layout_height="72dp"
        android:id="@+id/textView4"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:textAlignment="center"/>

    <TextView
        android:text="Out Of Total"
        android:textSize="20dp"
        android:textColor="#0b0b0b"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Subject Name"
        android:textColorHint="#0b0b0b"
        android:textColor="#0b0b0b"
        android:textSize="18dp"
        android:padding="10dp"
        android:ems="10"
        android:background="@drawable/border_textfield"
        android:textAlignment="textStart"
        android:id="@+id/subject_det_subname"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:singleLine="true" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Faculty Name"
        android:textColorHint="#0b0b0b"
        android:textColor="#0b0b0b"
        android:textSize="18dp"
        android:padding="10dp"
        android:ems="10"
        android:background="@drawable/border_textfield"
        android:textAlignment="textStart"
        android:id="@+id/subject_det_faculty"
        android:layout_marginEnd="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/subject_det_subname"
        app:layout_constraintHorizontal_bias="0.02"
        android:singleLine="true" />

    <EditText
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#0b0b0b"
        android:textSize="18dp"
        android:padding="10dp"
        android:background="@drawable/border_textfield"
        android:textAlignment="textStart"
        android:ems="4"
        android:id="@+id/subject_det_obtainedgrades"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#0b0b0b"
        android:textSize="18dp"
        android:padding="10dp"
        android:background="@drawable/border_textfield"
        android:textAlignment="textStart"
        android:ems="4"
        android:id="@+id/subject_det_totalgrades"
        app:layout_constraintLeft_toLeftOf="@+id/subject_det_obtainedgrades"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/subject_det_obtainedgrades" />

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:id="@+id/subject_det_save"
        android:background="?attr/colorPrimary"
        android:textColor="#fffefe"
        app:layout_constraintRight_toRightOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar" />


</android.support.constraint.ConstraintLayout>