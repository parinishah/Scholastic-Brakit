<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages">

    <Button
        android:text="Semester Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_options_semdets"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/border_button"
        android:padding="10dp"
        android:textSize="25dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

    <Button
        android:text="Subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_options_subject"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/semester_options_semdets"
        app:layout_constraintRight_toRightOf="@+id/semester_options_semdets"
        app:layout_constraintLeft_toLeftOf="@+id/semester_options_semdets"
        android:background="@drawable/border_button"
        android:padding="10dp"
        android:textSize="25dp"/>

    <Button
        android:text="Projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_options_project"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/semester_options_subject"
        app:layout_constraintRight_toRightOf="@+id/semester_options_subject"
        app:layout_constraintLeft_toLeftOf="@+id/semester_options_subject"
        android:background="@drawable/border_button"
        android:padding="10dp"
        android:textSize="25dp"/>

    <Button
        android:text="Certificates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_options_certificate"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/semester_options_project"
        app:layout_constraintLeft_toLeftOf="@+id/semester_options_project"
        app:layout_constraintRight_toRightOf="@+id/semester_options_project"
        android:background="@drawable/border_button"
        android:padding="10dp"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintVertical_bias="0.16000003" />

    <android.support.v7.widget.Toolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>